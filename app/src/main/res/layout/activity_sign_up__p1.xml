<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn_SignUp.SignUp_P1">


    <include

        android:id="@+id/toolbar_LogIn_SignUp"
        layout="@layout/toolbar_login_signin" />

    <ImageView
        android:id="@+id/zuccstagram_Logo"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_LogIn_SignUp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView_FirstName_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="204dp"
        android:text="@string/textView_FirstName_P1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_LogIn_SignUp" />

    <EditText
        android:id="@+id/editText_FirstName_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/editText_hint_FirstName_P1"
        android:inputType="textPersonName"
        android:text="@string/editText_FirstName_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/textView_FirstName_P1" />

    <TextView
        android:id="@+id/textView_LastName_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/textView_LastName_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/editText_FirstName_P1" />

    <EditText
        android:id="@+id/editText_LastName_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/editText_hint_LastName_P1"
        android:inputType="textPersonName"
        android:text="@string/editText_LastName_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/textView_LastName_P1" />



    <TextView
        android:id="@+id/textView_Email_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/textView_Email_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/editText_LastName_P1" />

    <EditText
        android:id="@+id/editText_Email_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/editText_hint_Email_P1"
        android:inputType="textEmailAddress"
        android:text="@string/editText_Email_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/textView_Email_P1" />


    <TextView
        android:id="@+id/textView_Email_Confirmation_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/textView_Email_Confirmation_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/editText_Email_P1" />

    <EditText
        android:id="@+id/editText_Email_Confirmation_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/editText_hint_Email_Confirmation_P1"
        android:inputType="textEmailAddress"
        android:text="@string/editText_Email_Confirmation_P1"
        app:layout_constraintStart_toStartOf="@+id/textView_FirstName_P1"
        app:layout_constraintTop_toBottomOf="@+id/textView_Email_Confirmation_P1" />





    <Button
        android:id="@+id/nextButton_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="550dp"
        android:text="@string/nextButton_P1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_LogIn_SignUp" />



</androidx.constraintlayout.widget.ConstraintLayout>